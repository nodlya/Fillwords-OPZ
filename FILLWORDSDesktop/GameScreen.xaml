<Window x:Class="FILLWORDS.GameScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FILLWORDS"
        mc:Ignorable="d"
        Closing="Exit" MouseDown="StartSelect" MouseMove="Selecting" MouseUp="Selected"
        Title="FILLWORDS" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Canvas Background="#FFF6E9BA" >
        <Grid Margin="10,60" x:Name="Table">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="Field" Grid.Row="0" Grid.Column="0" ShowGridLines="True" Height="300" Width="300" 
              />
            <TextBlock x:Name="GameInfo" Grid.Row="0" Grid.Column="1" FontSize="20" Text="Слово: "/>

        </Grid>
            
    </Canvas>
</Window>
